---
interface Props {
  id: string;
  name: string;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
  label?: string;
  placeholder?: string;

  minLength?: string | number;
  maxlength?: string | number;
  pattern?: string;
}

const { id, name, type = 'text', label, placeholder, minLength, maxlength, pattern } = Astro.props;
---

<div>
  {
    label && (
      <label
        for={id}
        class='block mb-2 text-sm font-medium'
      >
        {label}
      </label>
    )
  }
  <input
    id={id}
    name={name}
    type={type}
    placeholder={placeholder}
    minlength={minLength}
    maxlength={maxlength}
    pattern={pattern}
    required
    class='bg-white/5 border border-black/40 dark:border-white/5 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'
  />
</div>
