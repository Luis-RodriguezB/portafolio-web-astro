---
interface Props {
  title: string;
  date: string;
  descripcion?: string;
  responsabilities?: string[];
}

const { title, date, descripcion, responsabilities = [] } = Astro.props;
---

<div class='flex flex-col justify-center px-5'>
  <div
    class='flex-1 mb-4 flex flex-col sm:flex-row sm:justify-between sm:items-center'
  >
    <h4 class='text-lg font-semibold dark:text-white opacity-90'>
      {title}
    </h4>
    <span class='text-sm font-semibold text-blue-600 opacity-80 truncate dark:text-blue-500'>
      {date}
    </span>
  </div>
  <div class='text-sm'>
    {descripcion && <p class='font-normal dark:font-light text-sm leading-5 mb-4 opacity-90'>{descripcion}</p>}

    {
      responsabilities.length > 0 && (
        <ul class='ml-5 sm:ml-8'>
          {responsabilities.map((text) => (
            <li class='list-disc mb-2 opacity-90'>{text}</li>
          ))}
        </ul>
      )
    }
  </div>
</div>
